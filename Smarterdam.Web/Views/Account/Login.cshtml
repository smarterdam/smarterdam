@using System.Web.Optimization
@{
    ViewBag.Title = "Smarterdam";
}

<!DOCTYPE html>
<html>
    <head>
        <link href="~/Content/bootstrap/bootstrap.min.css" rel="stylesheet" media="screen">
        <style type="text/css">
            body {
                background-color: #f5f5f5;
            }

            .form-signin {
                max-width: 300px;
                padding: 19px 29px 29px;
                margin: 0 auto 20px;
                background-color: #fff;
                border: 1px solid #e5e5e5;
                -webkit-border-radius: 5px;
                -moz-border-radius: 5px;
                border-radius: 5px;
                -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
            }
            .form-signin .form-signin-heading,
            .form-signin .checkbox {
                margin-bottom: 10px;
            }
            .form-signin input[type="text"],
            .form-signin input[type="password"] {
                font-size: 16px;
                height: auto;
                margin-bottom: 15px;
                padding: 7px 9px;
            }

        </style>
    </head>
</html>
<body>
    <div class="container">
        <div class="page-header text-center">
            <h2>Smarterdam.org - a real time data processing framework for decision support</h2>
        </div>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-signin" }))
        {
            <h2 class="form-signin-heading">Please sign in</h2>
            @Html.TextBox("username", "", new { @class = "input-block-level", placeholder = "Login"})
            @Html.Password("password", "", new { @class = "input-block-level", placeholder = "Password"})
            <button class="btn btn-large btn-primary" type="submit">Sign in</button>
        }
    </div>
     <div class="navbar navbar-inverse navbar-fixed-bottom">
        <div class="navbar-header">            
            <ul class="nav navbar-nav">                
                <li>
                <a class="navbar-link" href="https://github.com/smarterdam">Source Code</a>
                </li>
            </ul>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>